{
  "name": "HomeNetMon - Network Monitor",
  "short_name": "HomeNetMon",
  "description": "Comprehensive home network monitoring solution with real-time device tracking and alerts",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  "theme_color": "#0d6efd",
  "background_color": "#ffffff",
  "categories": ["utilities", "productivity", "business"],
  "id": "homenetmon-app",
  "lang": "en-US",
