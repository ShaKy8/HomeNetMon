  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View network dashboard",
      "url": "/",
      "icons": [
        {
          "src": "/static/icons/dashboard-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Network Topology",
      "short_name": "Topology",
      "description": "View network topology map",
      "url": "/topology",
      "icons": [
        {
          "src": "/static/icons/topology-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Alerts",
      "short_name": "Alerts",
      "description": "View network alerts",
      "url": "/alerts",
      "icons": [
        {
          "src": "/static/icons/alerts-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Device Status",
      "short_name": "Devices",
      "description": "Quick device status check",
      "url": "/devices",
      "icons": [
        {
          "src": "/static/icons/device-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/static/screenshots/dashboard-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "HomeNetMon Dashboard on mobile"
    },
    {
      "src": "/static/screenshots/topology-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Network topology view on mobile"
    },
    {
      "src": "/static/screenshots/dashboard-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "HomeNetMon Dashboard on desktop"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+homenetmon",
      "url": "/protocol-handler?action=%s"
    }
  ],
  "related_applications": [],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "launch_type": "single-client"
    }
  ]
}