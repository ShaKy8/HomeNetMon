# HomeNetMon Environment Configuration Example
# Copy this file to .env and modify the values

# Network Configuration
NETWORK_RANGE=192.168.86.0/24
PING_INTERVAL=30
SCAN_INTERVAL=300
PING_TIMEOUT=3.0
MAX_WORKERS=50
DATA_RETENTION_DAYS=30

# Web Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Security (IMPORTANT: Change this!)
SECRET_KEY=homeNetMon-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///homeNetMon.db

# Email Alert Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
ALERT_FROM_EMAIL=homeNetMon@yourdomain.com
ALERT_TO_EMAILS=admin@yourdomain.com,user@yourdomain.com

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_TIMEOUT=10

# Additional Settings
# Uncomment and modify as needed

# Custom configuration file path
# CONFIG_FILE=config.yaml

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Custom log file path
# LOG_FILE=/var/log/homeNetMon/homeNetMon.log